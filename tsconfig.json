{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
	  "env.d.ts",
	  "src/**/*",
	  "src/**/*.vue",
    "components.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "node",
      "components.d.ts",
      "unplugin-vue-macros/macros-global"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
